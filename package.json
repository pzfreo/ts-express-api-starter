{
  "name": "ts-express-api-starter",
  "version": "1.0.0",
  "description": "simple typescript api",
  "main": "src/app.ts",
  "repository": "git@github.com:pzfreo/ts-express-api-starter.git",
  "author": "Paul Fremantle <pzfreo@github.com>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "tsoa routes; ts-node src/app.ts",
    "dev": "nodemon --watch . --ext ts --ignore 'src/generated/routes.ts' --exec \"tsoa routes; ts-node src/app.ts\"",
    "test": "newman run phone-postman.json",
    "test-dev": "nodemon --watch . --ignore 'src/generated/routes.ts' --ext ts --exec \"sleep 5 && newman run phone-postman.json\"",
    "build": "tsoa routes; tsc",
    "lint": "yarn run eslint src/"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "ts-node": "^9.1.1",
    "eslint": "^7.23.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@types/express": "^4.17.12",
    "express": "^4.17.1",
    "tsoa": "^3.6.1"
  }
}
